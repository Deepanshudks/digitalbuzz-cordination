generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  RM
  OPS
  ADMIN
}

enum Branch {
  MUMBAI
  NOIDA
  GURGAON
  PUNE
  BANGALORE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  PENDING
  IN_PROGRESS
  COMPLETED
  ON_HOLD
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  role      Role
  branch    Branch
  createdAt DateTime @default(now())

  createdTasks  Task[] @relation("CreatedTasks")
  taskUpdates       TaskUpdate[] @relation("UserTaskUpdates")

  @@map("users")
}


model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  clientName  String
  priority    Priority @default(MEDIUM)
  status      Status   @default(PENDING)
  deadline    DateTime
  branch      Branch
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  assignedBy String

  createdBy   User   @relation("CreatedTasks", fields: [createdById], references: [id])
  createdById String
  createdByUser String

  assignedTo String

  updates TaskUpdate[] 

  @@map("tasks")
}

model TaskUpdate {
  id        String   @id @default(cuid())
  task      Task     @relation(fields: [taskId], references: [id])
  taskId    String

  updatedBy   User   @relation("UserTaskUpdates", fields: [updatedById], references: [id])
  updatedById String
  updatedByUser String

  updatedAt DateTime @updatedAt

  oldStatus  Status
  newStatus  Status

  remarks    String  

  createdAt DateTime @default(now())
}